{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "settings": {
        "react": {
            "version": "latest"
        }
    },
    "plugins": ["react", "prettier", "flowtype", "react-hooks"],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "prettier/prettier": "error",
        "react/display-name": 0,
        "react/prop-types": 0,
        "no-debugger": 0
    },
    "globals": {
        "process": true,
        "Promise": true,
        "require": true
    }
}
